@model MedManagement.Data.Patient

@{
    ViewData["Title"] = "Details";
}

<h1 style="text-align:center;">Details</h1>

<div style="margin:auto;">
    <hr />
    <dl class="row" style="margin:auto;">
        <div class="col-md-4" style="margin:auto;">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PatientName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PatientSurname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientSurname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PatientAge)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientAge)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PatientType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientType)
        </dd>
        </div>
    </dl>
</div>
<div style ="text-align:center; padding-top: 20px;">
    <a type="button" class="btn btn-info" asp-action="Edit" asp-route-id="@Model?.PatientID">Edit</a> 
    <a type="button" class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
