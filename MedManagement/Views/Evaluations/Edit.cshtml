@model MedManagement.Data.Evaluation

@{
    ViewData["Title"] = "Edit";
}

<h1 style="text-align:center;">Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4" style="margin:auto;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EvaluationID" />
            <div class="form-group">
                <label asp-for="EvaluationValue" class="control-label">Evaluation Value</label>
                <input asp-for="EvaluationValue" class="form-control" />
                <span asp-validation-for="EvaluationValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EvaluationDesctyption" class="control-label">Evaluation Descryption</label>
                <input asp-for="EvaluationDesctyption" class="form-control" />
                <span asp-validation-for="EvaluationDesctyption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorId" class="control-label">Doctor Id</label>
                <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label">Patient Id</label>
                <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div style="text-align:center; padding-top: 20px;" class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="text-align:center; padding-top: 20px;">
    <a type="button" class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
