@using Microsoft.AspNetCore.Identity
@using MedManagement.Data;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MedManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/MedManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class='fas fa-stethoscope' style='font-size:24px'></i></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <ul class="navbar-nav flex-grow-1">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        if (User.IsInRole("Doctor"))
                        {
                    <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Evaluations" asp-action="Index">Evaluations</a>
                    </li>
                        }
                        else if (User.IsInRole("Recorder"))
                        {
                            <div class="dropdown show">
                                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    Menu
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" asp-area="" asp-controller="Patients" asp-action="Index">Patients</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Terms" asp-action="Index">Terms</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="dropdown show">
                                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    Menu
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" asp-area="" asp-controller="Doctors" asp-action="Index">Doctors</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="DoctorMedicalFacilities" asp-action="Index">Doctor Medical Facilities</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Evaluations" asp-action="Index">Evaluations</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="MedicalFacilities" asp-action="Index">Medical Facilitities</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Patients" asp-action="Index">Patients</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Terms" asp-action="Index">Terms</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Services" asp-action="Index">Services</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="DiseasesTreateds" asp-action="Index">Diseases Treated</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
                                </div>
                            </div>
                            @*                        <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="DoctorMedicalFacilities" asp-action="Index">Doctor Medical Facilities</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Evaluations" asp-action="Index">Evaluations</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="MedicalFacilities" asp-action="Index">Medical Facilitities</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Patients" asp-action="Index">Patients</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Terms" asp-action="Index">Terms</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Services" asp-action="Index">Services</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="DiseasesTreateds" asp-action="Index">Diseases Treated</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
                    </li>*@
                        }
                    }
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div id="page-container">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
