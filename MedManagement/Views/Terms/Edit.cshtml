@model MedManagement.Data.Terms

@{
    ViewData["Title"] = "Edit";
}

<h1 style="text-align:center;">Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4" style="margin:auto;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TermsID" />
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label">Created Date</label>
                <input asp-for="CreatedDate" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastUpdatedOn" class="control-label">Last Updated On</label>
                <input asp-for="LastUpdatedOn" class="form-control" />
                <span asp-validation-for="LastUpdatedOn" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsBusy" /> @Html.DisplayNameFor(model => model.IsBusy)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="MedicalFacilityId" class="control-label">Medical Facility</label>
                <select asp-for="MedicalFacilityId" class="form-control" asp-items="ViewBag.MedicalFacilityId"></select>
                <span asp-validation-for="MedicalFacilityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorId" class="control-label">Doctor</label>
                <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>
            <div style="text-align:center; padding-top: 20px;" class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="text-align:center; padding-top: 20px;">
    <a type="button" class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
