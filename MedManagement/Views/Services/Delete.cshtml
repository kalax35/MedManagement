@model MedManagement.Data.Service

@{
    ViewData["Title"] = "Delete";
}

<h3 style="text-align:center;">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row" style="margin:auto;">
        <div class="col-md-4" style="margin:auto;">
        <dt class = "col-sm-8">
                Service Name
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.ServiceName)
        </dd>
        <dt class = "col-sm-8">
                Service Description
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.ServiceDescription)
        </dd>
        <dt class = "col-sm-8">
                Service Price
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.ServicePrice)
        </dd>
        <dt class = "col-sm-8">
            @Html.DisplayNameFor(model => model.Doctor)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Doctor.DoctorName)
        </dd>
        </div>
    </dl>
    
    <form asp-action="Delete" style="text-align:center; padding-top: 20px;">
        <input type="hidden" asp-for="ServiceID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a type="button" class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
