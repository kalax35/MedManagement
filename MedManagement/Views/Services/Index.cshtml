@model IEnumerable<MedManagement.Data.Service>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center">Services</h1>

<p style="text-align: right">
    <a type="button" class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Service Name
            </th>
            <th>
                Service Description
            </th>
            <th>
                Service Price
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServicePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.DoctorName)
            </td>
            <td>
                    <a type="button" class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.ServiceID">Edit</a> 
                    <a type="button" class="btn btn-info" asp-action="Details" asp-route-id="@item.ServiceID">Details</a> 
                    <a type="button" class="btn btn-dark" asp-action="Delete" asp-route-id="@item.ServiceID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
